// Prisma schema complet pour RétroBus Essonne
// PostgreSQL pour Railway/production

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// ===== MEMBRES & UTILISATEURS =====

model Member {
  id            String   @id @default(cuid())
  email         String   @unique
  firstName     String?
  lastName      String?
  status        String   @default("active")
  permissions   String?  // JSON array
  membershipType String? @default("STANDARD")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  documents     Document[]
  expenseReports ExpenseReport[]
}

model SiteUser {
  id              String   @id @default(cuid())
  email           String   @unique
  linkedMemberId  String?
  role            String   @default("MEMBER")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model UserPermission {
  id          String   @id @default(cuid())
  userId      String
  resource    String
  actions     String   // JSON array
  grantedAt   DateTime @default(now())
  expiresAt   DateTime?
  
  @@index([userId])
}

// ===== VÉHICULES =====

model Vehicle {
  id                    Int      @id @default(autoincrement())
  parc                  String   @unique
  // Informations de base
  marque                String?
  modele                String?
  type                  String?  @default("Bus")
  etat                  String?  @default("disponible")
  subtitle              String?
  description           String?
  history               String?
  isPublic              Boolean  @default(false)
  
  // Immatriculation et identification
  immat                 String?
  numerosFlotte         String?
  constructeur          String?
  
  // Caractéristiques techniques
  energie               String?
  miseEnCirculation     DateTime?
  longueur              String?
  placesAssises         Int?
  placesDebout          Int?
  ufr                   String?
  moteur                String?
  boiteVitesses         String?
  nombrePortes          Int?
  climatisation         String?
  girouette             String?
  normeEuro             String?
  livree                String?
  
  // État et préservation
  statut                String?
  preservePar           String?
  
  // Autres
  fuel                  Int?     @default(0)
  caracteristiques      String?  // JSON array pour champs supplémentaires
  
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model VehicleUsage {
  id          String   @id @default(cuid())
  parc        String
  conducteur  String?
  note        String?
  startedAt   DateTime @default(now())
  endedAt     DateTime?
}

model VehicleMaintenance {
  id          String   @id @default(cuid())
  parc        String
  type        String?
  description String?
  cost        Float?   @default(0)
  mileage     Int?
  performedBy String?
  location    String?
  status      String?  @default("completed")
  date        DateTime @default(now())
  nextDueDate DateTime?
}

model VehicleServiceSchedule {
  id          String   @id @default(cuid())
  parc        String
  serviceType String?
  description String?
  frequency   String?
  priority    String?  @default("normal")
  status      String?  @default("pending")
  plannedDate DateTime?
}

// ===== ÉVÉNEMENTS =====

model Event {
  id          String   @id @default(cuid())
  title       String
  description String?
  date        DateTime?
  status      String   @default("DRAFT")
  extras      String?  // JSON for additional fields
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  transactions Transaction[]
  scheduled    ScheduledExpense[]
  expenseReports ExpenseReport[]
}

// ===== FLASHES & NOTIFICATIONS =====

model Flash {
  id        String   @id @default(cuid())
  title     String?
  message   String?
  content   String?
  type      String?  @default("info")
  active    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Notification {
  id        String   @id @default(cuid())
  type      String?  @default("info")
  message   String?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

// ===== ACTUALITÉS =====

model RetroNews {
  id          String   @id @default(cuid())
  title       String?
  body        String?
  content     String?
  excerpt     String?
  imageUrl    String?
  author      String?
  status      String?  @default("draft")
  published   Boolean  @default(false)
  featured    Boolean  @default(false)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Document {
  id         String   @id @default(cuid())
  member     Member   @relation(fields: [memberId], references: [id])
  memberId   String
  type       String
  status     String   @default("valid")
  expiresAt  DateTime?
  createdAt  DateTime @default(now())
}

model Transaction {
  id          String   @id @default(cuid())
  type        String   // recette | depense
  amount      Float    @default(0)
  description String?
  category    String?
  date        DateTime @default(now())
  event       Event?   @relation(fields: [eventId], references: [id])
  eventId     String?
  createdAt   DateTime @default(now())
}

model ScheduledExpense {
  id          String   @id @default(cuid())
  type        String   // recette | depense
  amount      Float    @default(0)
  description String?
  category    String?
  dueDate     DateTime?
  recurring   String?  // none | monthly | yearly
  event       Event?   @relation(fields: [eventId], references: [id])
  eventId     String?
  createdAt   DateTime @default(now())
}

model ExpenseReport {
  id          String   @id @default(cuid())
  date        DateTime @default(now())
  description String?
  amount      Float    @default(0)
  status      String   @default("open") // open | closed | reimbursed
  planned     Boolean  @default(false)
  fileName    String?
  fileUrl     String?
  member      Member?  @relation(fields: [memberId], references: [id])
  memberId    String?
  event       Event?   @relation(fields: [eventId], references: [id])
  eventId     String?
  createdAt   DateTime @default(now())
  reimbursedAt DateTime?
  closedAt    DateTime?
}

// ===== ADMINISTRATION VÉHICULES =====

model VehicleGrayscale {
  id                String   @id @default(cuid())
  vehicleId         String   @unique // référence au véhicule (parc)
  currentGrayscaleNumber String // numéro CG actuelle
  currentGrayscaleUrl String? // URL du fichier CG
  previousGrayscaleNumber String? // ancienne CG
  previousGrayscaleUrl String? // URL ancienne CG
  registrationDate  DateTime?
  expiresAt         DateTime?
  status            String   @default("valid") // valid | expired
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model VehicleCessionCertificate {
  id                String   @id @default(cuid())
  vehicleId         String   @unique // référence au véhicule (parc)
  certificateUrl    String? // URL du fichier de cession
  issuedDate        DateTime?
  issuedBy          String? // nom du vendeur
  status            String   @default("active") // active | archived
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model VehicleInsurance {
  id                String   @id @default(cuid())
  vehicleId         String   @unique // référence au véhicule (parc)
  attestationUrl    String? // URL attestation PDF
  insuranceCompany  String? // nom assureur
  policyNumber      String? // numéro police
  validFrom         DateTime? // date début validité
  validUntil        DateTime? // date fin validité
  validFromTime     String? // heure début (HH:mm)
  validUntilTime    String? // heure fin (HH:mm)
  status            String   @default("valid") // valid | expired | pending
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model VehicleInspection {
  id                String   @id @default(cuid())
  vehicleId         String   // référence au véhicule (parc)
  attestationUrl    String? // URL attestation CT
  inspectionDate    DateTime? // date du dernier CT
  expiryDate        DateTime? // date expiration CT
  mileage           Int? // kilométrage au CT
  status            String   @default("valid") // valid | expired | contravisite | pending
  defects           String? // défauts relevés (JSON)
  nextInspectionDate DateTime? // date prochain CT obligatoire
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  @@unique([vehicleId, inspectionDate]) // un seul CT par date
}

model VehicleScheduleItem {
  id                String   @id @default(cuid())
  vehicleId         String // référence au véhicule (parc)
  type              String // "cg" | "insurance" | "inspection" | "maintenance" | "custom"
  description       String // ex: "Renouvellement assurance"
  dueDate           DateTime
  dueTime           String? // heure (HH:mm)
  priority          String   @default("normal") // low | normal | high | critical
  status            String   @default("pending") // pending | completed | overdue
  notes             String? // notes additionnelles
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  @@index([vehicleId])
  @@index([dueDate])
}

model VehicleAdministrativeNote {
  id                String   @id @default(cuid())
  vehicleId         String // référence au véhicule (parc)
  category          String // "administrative" | "maintenance" | "legal" | "other"
  content           String // contenu de la note
  attachmentUrl     String? // URL d'une pièce jointe si nécessaire
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  @@index([vehicleId])
}
